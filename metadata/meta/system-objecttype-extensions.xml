			<attribute-definition
				attribute-id="P360VariationGroupViewType">
				<display-name xml:lang="x-default">Variation Group Image View Type</display-name>
				<description xml:lang="x-default">Variation Group Image View Type</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<externally-managed-flag>false</externally-managed-flag>
				<default-value>small</default-value>
			</attribute-definition>
			<attribute-definition
				attribute-id="P360ZoomPower">
				<display-name xml:lang="x-default">P360 Zoom Power
				</display-name>
				<description xml:lang="x-default">P360 Zoom Power
				</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<externally-managed-flag>false</externally-managed-flag>
				<default-value>2</default-value>
			</attribute-definition>
			<attribute-definition
				attribute-id="P360ZoomRadius">
				<display-name xml:lang="x-default">P360 Zoom Radius
				</display-name>
				<description xml:lang="x-default">P360 Zoom Radius
				</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<externally-managed-flag>false</externally-managed-flag>
				<default-value>100</default-value>
			</attribute-definition>
			<attribute-definition
				attribute-id="P360AutoRotateInterval">
				<display-name xml:lang="x-default">P360 Auto Rotate Interval
				</display-name>
				<description xml:lang="x-default">P360 Auto Rotate Interval
				</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<externally-managed-flag>false</externally-managed-flag>
				<default-value>150</default-value>
			</attribute-definition>
			<attribute-definition
				attribute-id="P360AutoRotate">
				<display-name xml:lang="x-default">P360 Auto Rotate</display-name>
				<description xml:lang="x-default">Enable or disable the P360
