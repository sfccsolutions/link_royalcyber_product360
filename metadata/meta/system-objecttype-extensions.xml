				<attribute attribute-id="P360VariantViewType" />
				<attribute attribute-id="P360StandardViewType" />
				<attribute attribute-id="P360ProductSetViewType" />
				<attribute attribute-id="P360ProductBundleViewType" />
				<attribute attribute-id="P360VariationGroupViewType" />
				<attribute attribute-id="P360ZoomPower" />
				<attribute attribute-id="P360ZoomRadius" />
				<attribute attribute-id="P360AutoRotateInterval" />
